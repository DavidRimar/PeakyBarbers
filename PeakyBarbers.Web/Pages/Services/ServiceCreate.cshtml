@page
@model PeakyBarbers.Web.Pages.Services.ServiceCreateModel

@{
    ViewData["Title"] = "Create Service";
}

<h1>Create New Service</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceToCreate.ServiceName" class="control-label"></label>
                <input asp-for="ServiceToCreate.ServiceName" class="form-control" />
                <span asp-validation-for="ServiceToCreate.ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceToCreate.ServiceFee" class="control-label"></label>
                <input asp-for="ServiceToCreate.ServiceFee" class="form-control" />
                <span asp-validation-for="ServiceToCreate.ServiceFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceToCreate.ServiceDescription" class="control-label"></label>
                <input asp-for="ServiceToCreate.ServiceDescription" class="form-control" />
                <span asp-validation-for="ServiceToCreate.ServiceDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceToCreate.ApproximateServiceDurationInMinutes" class="control-label"></label>
                <input asp-for="ServiceToCreate.ApproximateServiceDurationInMinutes" class="form-control" />
                <span asp-validation-for="ServiceToCreate.ApproximateServiceDurationInMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="ServiceList">Back to Service List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
