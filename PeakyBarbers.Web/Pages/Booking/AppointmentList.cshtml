@page
@model PeakyBarbers.Web.Pages.Booking.AppointmentListModel
@{
}

<section id="appointment_slots_section" class="container-fluid text-center">

    <div class="row justify-content-center m-lg-5 m-sm-2">
        <h5>Upcoming Appointments By Week</h5>
    </div>

    <nav aria-label="Table Page Navigation" class="mt-2 mb-1 my-lg-3">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link btn-outline-light border-primary" asp-route-date="@Model.PreviousWeekStartDayString">Previous Week</a></li>
            <li class="page-item"><a class="page-link btn-outline-light border-primary" asp-route-date="@Model.CurrentWeekStartDayString">@Model.CurrentWeekString</a></li>
            <li class="page-item"><a class="page-link btn-outline-light border-primary" asp-route-date="@Model.NextWeekStartDayString">Next Week</a></li>
        </ul>
    </nav>

    @if (Model.AllAppointmentSlotHeaders.Any())
    {
        <!-- Selectable Dropdown -->
        <form>
            <div class="row justify-content-left ml-4">
                <div class="col-2">
                    <label>Filter By Barber: </label>
                </div>
                <div class="col-3">
                    <select class="custom-select" asp-for="SelectedBarberFullName" asp-items="@Model.BarberList">
                        <option value="">Select Barber</option>
                    </select>
                </div>
                <div class="col-2">
                    <input type="submit" value="Filter" class="btn btn-outline-primary" />
                </div>
            </div>
        </form>


        <!-- Table -->
        <table id="app-slots-table" class="border border-dark mx-lg-5 px-y-5">

            <thead>
                <tr class="flex-row py-lg-3 py-md-2 py-sm-1 border-bottom border-dark">

                    @* Appointment Slot Header Row *@
                    <th class="col-2 mx-5">
                        @Html.DisplayNameFor(model => model.AllAppointmentSlotHeaders.ToList()[0].BarberFullName)
                    </th>
                    <th class="col-2 mx-5">
                        @Html.DisplayNameFor(model => model.AllAppointmentSlotHeaders.ToList()[0].DayOfYear)
                    </th>
                    <th class="col-3 mx-5">
                        @Html.DisplayNameFor(model => model.AllAppointmentSlotHeaders.ToList()[0].StartTime)
                    </th>
                    <th class="col-3 mx-5">
                        @Html.DisplayNameFor(model => model.AllAppointmentSlotHeaders.ToList()[0].EndTime)
                    </th>
                    <th class="col-1 mx-3">
                        Book
                    </th>
                    <th class="col-1 mx-3">
                        Delete
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var appS in Model.AllAppointmentSlotHeaders)
                {

                    @* Working Schedule Table Rows *@
                    <tr class="flex-row p-lg-3 p-md-2 p-sm-1 border-bottom border-secondary" data-id="@appS.Id">
                        <td class="col-2 mx-5">
                            @Html.DisplayFor(modelItem => appS.BarberFullName)
                        </td>
                        <td class="col-2 mx-5">
                            @Html.DisplayFor(modelItem => appS.DayOfYear)
                        </td>
                        <td class="col-3 mx-5">
                            @Html.DisplayFor(modelItem => appS.StartTime)
                        </td>
                        <td class="col-3 mx-5">
                            @Html.DisplayFor(modelItem => appS.EndTime)
                        </td>
                        <td class="col-2 mx-5">

                            <!-- Button trigger modal -->
                            @{ if (appS.BookingStatus == Data.Enums.BookingStatus.Available)
                                {
                                    <button class="btn btn-success book-button" data-id="@appS.Id" data-toggle="modal" data-target="#bookModal">
                                        BOOK
                                    </button>
                                }
                                else if (appS.BookingStatus == Data.Enums.BookingStatus.Booked)
                                {
                                    <button class="btn btn-danger disabled">
                                        BOOKED
                                    </button>
                                }
                                else if (appS.BookingStatus == Data.Enums.BookingStatus.Expired)
                                {
                                    <button class="btn btn-secondary disabled">
                                        EXPIRED
                                    </button>
                                }
                            }

                            <!-- Modal -->
                            <div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">Book Your Appointment</span>
                                            </button>
                                        </div>
                                        <div id="customer-book-modal" class="modal-body">
                                            <!--<div asp-page-handler="ShowModalPartial" asp-route-id="item.ID">-->
                                            <!-- AJAX CALL LOADS STUFF -->

                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="col-2 mx-5">

                            <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-confirm="Are You Sure to Delete?" data-ajax-success="refreshPage">
                                <input type="hidden" name="id" value="@appS.Id">
                                <button type="submit" class="btn btn-warning rounded" title="App Slot Delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Appointments Available for this Week.</p>
    }
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        //$(document).ready(function () {
        //    $("#app-slots-table").dataTable();
        //});
    </script>
}